<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_TRIPS_FORM_LBL_TRIP_CREATED_BY" description="COM_TRIPS_FORM_DESC_TRIP_CREATED_BY" hidden="true" hint="COM_TRIPS_FORM_LBL_TRIP_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_TRIPS_FORM_LBL_TRIP_MODIFIED_BY" description="COM_TRIPS_FORM_DESC_TRIP_MODIFIED_BY" hidden="true" hint="COM_TRIPS_FORM_LBL_TRIP_MODIFIED_BY"/>
    <field name="trip_img" type="FileMultiple" label="COM_TRIPS_FORM_LBL_TRIP_TRIP_IMG" description="COM_TRIPS_FORM_DESC_TRIP_TRIP_IMG" hint="COM_TRIPS_FORM_LBL_TRIP_TRIP_IMG"/>
    <field name="trip_title" filter="safehtml" type="text" label="COM_TRIPS_FORM_LBL_TRIP_TRIP_TITLE" description="COM_TRIPS_FORM_DESC_TRIP_TRIP_TITLE" hint="COM_TRIPS_FORM_LBL_TRIP_TRIP_TITLE"/>
    <field name="trip_desc" filter="safehtml" type="textarea" label="COM_TRIPS_FORM_LBL_TRIP_TRIP_DESC" description="COM_TRIPS_FORM_DESC_TRIP_TRIP_DESC" hint="COM_TRIPS_FORM_LBL_TRIP_TRIP_DESC"/>
    <field name="banner_image" type="FileMultiple" label="COM_TRIPS_FORM_LBL_TRIP_BANNER_IMAGE" description="COM_TRIPS_FORM_DESC_TRIP_BANNER_IMAGE" hint="COM_TRIPS_FORM_LBL_TRIP_BANNER_IMAGE"/>
    <field name="detail_page" editor="|" buttons="false" filter="JComponentHelper::filterText" type="editor" label="COM_TRIPS_FORM_LBL_TRIP_DETAIL_PAGE" description="COM_TRIPS_FORM_DESC_TRIP_DETAIL_PAGE" hint="COM_TRIPS_FORM_LBL_TRIP_DETAIL_PAGE"/>
	
	 <field name="rupee" type="text" label="rupees Symbol" description="rupees Symbol" hint="rupees Symbol"/>
	 
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
