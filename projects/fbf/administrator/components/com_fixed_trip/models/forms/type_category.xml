<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_CREATED_BY" description="COM_FIXED_TRIP_FORM_DESC_TYPE_CATEGORY_CREATED_BY" hidden="true" hint="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_MODIFIED_BY" description="COM_FIXED_TRIP_FORM_DESC_TYPE_CATEGORY_MODIFIED_BY" hidden="true" hint="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_MODIFIED_BY"/>
    <field name="title" filter="safehtml" type="text" label="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_TITLE" description="COM_FIXED_TRIP_FORM_DESC_TYPE_CATEGORY_TITLE" hint="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_TITLE"/>
    <field name="picture" type="FileMultiple" label="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_PICTURE" description="COM_FIXED_TRIP_FORM_DESC_TYPE_CATEGORY_PICTURE" hint="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_PICTURE"/>
    
    <field name="pictureb" type="FileMultiple" label="Banner Picture" description="banner picture" hint="banner picture"/>

    <field name="description" filter="safehtml" type="textarea" label="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_DESCRIPTION" description="COM_FIXED_TRIP_FORM_DESC_TYPE_CATEGORY_DESCRIPTION" hint="COM_FIXED_TRIP_FORM_LBL_TYPE_CATEGORY_DESCRIPTION"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
