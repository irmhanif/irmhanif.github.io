<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_CUSTOMIZED_TRIP_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_CUSTOMIZED_TRIP_FILTER_STATE"
               description="COM_CUSTOMIZED_TRIP_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="trnasport" label="COM_CUSTOMIZED_TRIP_FORM_LBL_CUSTOMIZED_TRIP_TRNASPORT" type="list" onchange="this.form.submit();" default="COM_CUSTOMIZED_TRIP_CUSTOMIZED_TRIPS_TRNASPORT_FILTER">
