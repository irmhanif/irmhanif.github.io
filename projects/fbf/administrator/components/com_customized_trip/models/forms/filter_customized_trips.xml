  <option value="">COM_CUSTOMIZED_TRIP_CUSTOMIZED_TRIPS_TRNASPORT_OPTION_</option>
</field>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`trip_tittle` ASC">Event Name Ascending</option><option value="a.`trip_tittle` DESC">Event Name Descending</option><option value="a.`description` ASC">Description Ascending</option><option value="a.`description` DESC">Description Descending</option><option value="a.`tittle_link1` ASC">Short Description Ascending</option><option value="a.`tittle_link1` DESC">Short Description Descending</option><option value="a.`trnasport` ASC">Trnasport Ascending</option><option value="a.`trnasport` DESC">Trnasport Descending</option><option value="a.`placeofdeparture` ASC">Placeofdeparture Ascending</option><option value="a.`placeofdeparture` DESC">Placeofdeparture Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>