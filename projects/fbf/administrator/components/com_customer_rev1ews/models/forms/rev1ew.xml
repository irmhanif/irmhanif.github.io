<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_CREATED_BY" description="COM_CUSTOMER_REV1EWS_FORM_DESC_REV1EW_CREATED_BY" hidden="true" hint="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_MODIFIED_BY" description="COM_CUSTOMER_REV1EWS_FORM_DESC_REV1EW_MODIFIED_BY" hidden="true" hint="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_MODIFIED_BY"/>
    <field name="uid" label="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_UID" description="COM_CUSTOMER_REV1EWS_FORM_DESC_REV1EW_UID" hint="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_UID"/>
    <field name="reviewvalue" filter="safehtml" type="text" label="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_REVIEWVALUE" description="COM_CUSTOMER_REV1EWS_FORM_DESC_REV1EW_REVIEWVALUE" hint="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_REVIEWVALUE"/>
    <field name="reviewtext" editor="|" buttons="false" filter="JComponentHelper::filterText" type="editor" label="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_REVIEWTEXT" description="COM_CUSTOMER_REV1EWS_FORM_DESC_REV1EW_REVIEWTEXT" hint="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_REVIEWTEXT"/>
    <field name="image" type="FileMultiple" label="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_IMAGE" description="COM_CUSTOMER_REV1EWS_FORM_DESC_REV1EW_IMAGE" hint="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_IMAGE"/>
    <field name="tittle" filter="safehtml" type="text" label="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_TITTLE" description="COM_CUSTOMER_REV1EWS_FORM_DESC_REV1EW_TITTLE" hint="COM_CUSTOMER_REV1EWS_FORM_LBL_REV1EW_TITTLE"/>
    <field name="test" default="0" type="list" label="Display in Homepage" description="JFIELD_PUBLISHED_DESC" class="selete">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </field>
    <field name="author_name" filter="safehtml" type="text" label="Author Name" description="Author Name" hint="Author Name"/>
    
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
